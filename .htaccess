# ================================================
# SIRA Portal - Helpdesk Clonsa Ingenieria
# Archivo de seguridad Apache
# ================================================

# Forzar HTTPS en produccion
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTP_HOST} !^192\.168\. [NC]
RewriteCond %{HTTP_HOST} !^127\.0\.0\.1 [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ================================================
# BLOQUEAR ACCESO A DIRECTORIOS SENSIBLES
# ================================================

# Bloquear acceso a config/
<IfModule mod_rewrite.c>
    RewriteRule ^config/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^bd/ - [F,L]
    RewriteRule ^\.claude/ - [F,L]
    RewriteRule ^\.git/ - [F,L]
    RewriteRule ^AYUDA - [F,L]
    RewriteRule ^CONFIGURACION - [F,L]
</IfModule>

# ================================================
# BLOQUEAR ARCHIVOS SENSIBLES
# ================================================

# Bloquear archivos .sql, .log, .md, .jsonl
<FilesMatch "\.(sql|log|md|jsonl|env|bak|old|orig|save)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear archivos ocultos (.git, .env, etc)
<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# ================================================
# DESHABILITAR LISTADO DE DIRECTORIOS
# ================================================
Options -Indexes

# ================================================
# HEADERS DE SEGURIDAD
# ================================================
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Prevenir MIME sniffing
    Header always set X-Content-Type-Options "nosniff"

    # Habilitar XSS protection
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Remover header que expone version de PHP
    Header unset X-Powered-By

    # Cache control para archivos sensibles
    <FilesMatch "\.(php)$">
        Header set Cache-Control "no-store, no-cache, must-revalidate"
        Header set Pragma "no-cache"
    </FilesMatch>
</IfModule>

# ================================================
# PROTEGER ARCHIVOS DE CONFIGURACION ESPECIFICOS
# ================================================
<Files "config.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</Files>

<Files "session.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</Files>

<Files "database.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</Files>

# ================================================
# COMPRESION GZIP
# ================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css
    AddOutputFilterByType DEFLATE text/javascript application/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ================================================
# CACHE PARA ASSETS ESTATICOS
# ================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
